<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiFitness.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiFitness"
    xmlns:views="clr-namespace:MauiFitness.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar Route="Index">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate views:LoginPage}"
            Route="LoginPage" Icon="home.png"/>

        <ShellContent
            Title="Workouts"
            ContentTemplate="{DataTemplate views:WorkoutsPage}"
            Route="WorkoutsPage" Icon="gym.png"/>

        <ShellContent
            Title="Meals"
            ContentTemplate="{DataTemplate views:MealsPage}"
            Route="MealsPage" Icon="breakfast.png"/>

    </TabBar>

</Shell>


    